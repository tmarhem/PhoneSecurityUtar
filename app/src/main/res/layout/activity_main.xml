<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="my.utar.phonesecurat.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home menu"
        android:id="@+id/textView2">
    </TextView>

    <Button
        android:id="@+id/ButtonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="9dp">
    </Button>

    <Button
        android:id="@+id/ButtonStartBaseProfiling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start base profiling"
        android:layout_below="@+id/ButtonSettings"
        android:layout_alignStart="@+id/ButtonSettings"
        android:layout_marginTop="27dp">
    </Button>

    <Button
        android:id="@+id/ButtonRunInBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run in Background"
        android:layout_below="@+id/ButtonStartBaseProfiling"
        android:layout_alignStart="@+id/ButtonStartBaseProfiling"
        android:layout_marginTop="19dp">
    </Button>

    <Button
        android:id="@+id/ButtonStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Service"
        android:layout_below="@+id/ButtonRunInBackground"
        android:layout_alignStart="@+id/ButtonRunInBackground"
        android:layout_marginTop="27dp">
    </Button>


</RelativeLayout>
