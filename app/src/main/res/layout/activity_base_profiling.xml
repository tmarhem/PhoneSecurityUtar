<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="my.utar.phonesecurat.SettingsActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/instantValuesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnReset"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:text="INSTANT VALUES"></TextView>

    <TextView
        android:id="@+id/instantValuesDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/instantValuesTitle"
        android:layout_below="@+id/instantValuesTitle"
        android:text="..............."></TextView>

    <TextView
        android:id="@+id/avgValuesDispay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avgValuesTitle"
        android:layout_toEndOf="@+id/LengthMatchTitle"
        android:text=".............."></TextView>

    <TextView
        android:id="@+id/avgValuesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/instantValuesTitle"
        android:layout_alignBottom="@+id/instantValuesTitle"
        android:layout_marginStart="53dp"
        android:layout_toEndOf="@+id/instantValuesTitle"
        android:gravity="center_horizontal"
        android:text="MOTION VALUES">
    </TextView>

    <TextView
        android:id="@+id/counterSwipeRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="350dp"
        android:text="SR" />

    <Button
        android:id="@+id/btnReset"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:text="Reset"/>

    <TextView
        android:id="@+id/AbsLengthMatchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/counterSwipeLeft"
        android:layout_below="@+id/avgValuesDispay"
        android:layout_marginTop="30dp"
        android:text="Curve match" />

    <TextView
        android:id="@+id/LengthMatchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AbsLengthMatchTitle"
        android:layout_marginStart="103dp"
        android:text="Length match"/>

    <TextView
        android:id="@+id/DurationMatchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LengthMatchTitle"
        android:layout_marginStart="103dp"
        android:text="Duration match"/>


    <TextView
        android:id="@+id/SpeedMatchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DurationMatchTitle"
        android:layout_marginStart="103dp"
        android:text="Speed match"/>

    <TextView
        android:id="@+id/PressureMatchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SpeedMatchTitle"
        android:layout_marginStart="103dp"
        android:text="Pressure match"/>

    <TextView
        android:id="@+id/absLengthMatchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/AbsLengthMatchTitle"
        android:layout_toEndOf="@+id/AbsLengthMatchTitle"
        android:text="  pending..."/>

    <TextView
        android:id="@+id/lengthMatchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AbsLengthMatchTitle"
        android:layout_toEndOf="@+id/LengthMatchTitle"
        android:text="  pending..."/>

    <TextView
        android:id="@+id/durationMatchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lengthMatchResult"
        android:layout_toEndOf="@+id/DurationMatchTitle"
        android:text="  pending..."/>

    <TextView
        android:id="@+id/speedMatchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DurationMatchTitle"
        android:layout_toEndOf="@+id/SpeedMatchTitle"
        android:text="  pending..."/>

    <TextView
        android:id="@+id/pressureMatchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedMatchResult"
        android:layout_toEndOf="@+id/PressureMatchTitle"
        android:text="  pending..."/>

    <TextView
        android:id="@+id/counterScrollUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="SU" />

    <TextView
        android:id="@+id/counterSwipeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="350dp"
        android:autoText="false"
        android:clickable="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:text="SL" />

    <TextView
        android:id="@+id/counterScrollDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="SD" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/counterSwipeRight"
        android:layout_alignBottom="@+id/counterSwipeRight"
        android:layout_toEndOf="@+id/counterSwipeRight"
        android:text=": Swipes right " />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/counterScrollDown"
        android:layout_alignBottom="@+id/counterScrollDown"
        android:layout_toEndOf="@+id/SpeedMatchTitle"
        android:text=": Scrolls down" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/counterScrollUp"
        android:layout_alignBottom="@+id/counterScrollUp"
        android:layout_toStartOf="@+id/avgValuesTitle"
        android:text="Scrolls up :" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/counterSwipeLeft"
        android:layout_alignBottom="@+id/counterSwipeLeft"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:text="Swipes left :" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="REMAINING TRAINING MOVES REQUIRED" />


</RelativeLayout>
